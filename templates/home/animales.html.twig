{% extends 'layouts/master.html.twig' %}

{% block titulo %} Animales {% endblock %}

{% block cabecera %}
  {{parent()}}

  <h2>{{ title }}</h2>
{% endblock %}

{% block contenido %}
  {#
  <h1>{{ title }}</h1>
  <h2>Tu nombre es: {{ nombre }}</h2>
  <h3>Tus apellidos son: {{ apellidos }}</h3>
  #}

  {# Crear variable en twig #}
  {% set perro = 'Pastor alem√°n' %}
  <h4>{{ perro }}</h4>

  {# Trabajar con arrays #}
  {{ dump(animales) }}
  {{ animales[1] }}

  {# Trabajar con arrays asociativos #}
  {{ dump(aves) }}
  {{ aves.tipo ~ ' - ' ~  aves.raza }}

  {# Condicionales #}
  {% if aves.tipo == 'palomo' %}
    <h1>Cuidado un palomo volador</h1>
  {% else %}
    <h2>No hay palomos a la vista</h2>
  {% endif %}

  {# Bucles #}
  {% if animales|length >= 0 %}
    <ul>
      {% for animal in animales %}
        <li>{{animal}}</li>
      {% endfor %}
    </ul>
  {% else %}
    <h2>No hay animales</h2>
  {% endif %}

  {% for i in 2..10 %}
    {{i}}<br/>
  {% endfor %}

  {# Evaluar variables: si empieza por... #}
  {% if aves.color starts with 'g' %}
    <h1>Empieza por 'g'</h1>
  {% endif %}

  {# Evaluar variables: si acaba por... #}
  {% if aves.color ends with 'is' %}
    <h1>Acaba por 'is'</h1>
  {% endif %}

  <hr>
  <h1>Funciones</h1>
  {# Funciones predefinidas #}
  {{ min([9, 11, 6, 99, 2]) }}<br/>
  {{ max([9, 11, 6, 99, 2]) }}<br/>
  {{ random(animales) }}<br/>

  {# outputs 0, 1, 2, 3, #}
  {% for i in range(0, 3) %}
    {{ i }}
  {% endfor %}<br/>

  {# outputs 0, 2, 4, 6 #}
  {% for i in range(0, 6, 2) %}
    {{ i }}
  {% endfor %}<br/>

{% endblock %}